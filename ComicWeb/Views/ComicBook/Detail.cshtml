@{
    Layout = null;


}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h1>@ViewBag.SeriesTitle</h1>
        <h2>Issue number: @ViewBag.IssueNumber</h2>
        <h5>Description</h5>
        <div>
            <p>@ViewBag.Description</p>
            @ViewBag.htmlEscape
            @Html.Raw(ViewBag.Description)
        </div>
        @if (ViewBag.Artists.Length > 0)
        {
            <h5>Artists:</h5>
            <div>
                <p>Si esto es un array, entonces se visualiza asi:</p>
                <p><strong>@ViewBag.Artists</strong></p>
                <p>Para arreglarlo usamos un forich</p>
                <ul>
                    @foreach (var artist in ViewBag.Artists)
                    {
                        <li> @artist </li>
                    }
                </ul>
            </div>
        }
    </div>
</body>
</html>
